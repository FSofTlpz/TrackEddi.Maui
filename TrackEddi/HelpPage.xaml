<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrackEddi.HelpPage"
             Title="Hinweise"
             x:Name="mypage"
             BackgroundColor="LightGray">
   <ContentPage.Resources>
      <ResourceDictionary>
         <Style x:Key="MySection" TargetType="Label">
            <Setter Property="TextColor" Value="Black"/>
            <Setter Property="HorizontalOptions" Value="Center"/>
            <Setter Property="FontSize" Value="Medium"/>
            <Setter Property="Margin" Value="5"/>
         </Style>

         <Style x:Key="MyAction" TargetType="Label">
            <Setter Property="TextColor" Value="DarkBlue"/>
            <Setter Property="VerticalOptions" Value="Center"/>
            <Setter Property="Grid.Column" Value="0"/>
            <Setter Property="Margin" Value="5"/>
         </Style>

         <Style x:Key="MyInfo" TargetType="Label">
            <Setter Property="TextColor" Value="DarkGreen"/>
            <Setter Property="VerticalOptions" Value="Center"/>
            <Setter Property="Grid.Column" Value="1"/>
            <Setter Property="Margin" Value="5"/>
         </Style>
      </ResourceDictionary>
   </ContentPage.Resources>

   <ContentPage.Content>
      <ScrollView>
         <VerticalStackLayout>

            <Grid ColumnDefinitions="auto,auto" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto">
               <ImageButton Grid.Row="0" Grid.Column="0" Source="buttonmap.png" Style="{StaticResource MyImageButton}" Padding="5"/>
               <Label Grid.Row="0" Grid.Column="1" Style="{StaticResource MyInfo}" Text="Auswahl einer Karte"/>

               <ImageButton Grid.Row="1" Grid.Column="0" Source="buttonzoomin.png" Style="{StaticResource MyImageButton}" Padding="5"/>
               <Label Grid.Row="1" Grid.Column="1" Style="{StaticResource MyInfo}" Text="Hereinzoomen"/>

               <ImageButton Grid.Row="2" Grid.Column="0" Source="buttonzoomout.png" Style="{StaticResource MyImageButton}" Padding="5"/>
               <Label Grid.Row="2" Grid.Column="1" Style="{StaticResource MyInfo}" Text="Herauszoomen"/>

               <ImageButton Grid.Row="3" Grid.Column="0" Source="buttonlist.png" Style="{StaticResource MyImageButton}" Padding="5"/>
               <Label Grid.Row="3" Grid.Column="1" Style="{StaticResource MyInfo}" Text="Track- und Markerliste"/>

               <ImageButton Grid.Row="4" Grid.Column="0" Source="buttonlocation.png" Style="{StaticResource MyImageButton}" Padding="5"/>
               <Label Grid.Row="4" Grid.Column="1" Style="{StaticResource MyInfo}" Text="akt. Position anzeigen"/>

               <ImageButton Grid.Row="5" Grid.Column="0" Source="buttontracking.png" Style="{StaticResource MyImageButton}" Padding="5"/>
               <Label Grid.Row="5" Grid.Column="1" Style="{StaticResource MyInfo}" Text="Track aufzeichnen"/>
            </Grid>

            <BoxView Style="{StaticResource HLine}"/>
            <Label Style="{StaticResource MySection}" Text="Anzeige- und Bearbeitungsmodi"/>

            <Grid ColumnDefinitions="auto,auto" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto">
               <ImageButton Grid.Row="0" Grid.Column="0" Source="buttonempty.png" Style="{StaticResource MyImageButton}" Padding="5"/>
               <Label Grid.Row="0" Grid.Column="1" Style="{StaticResource MyInfo}" Text="Standardmodus"/>

               <ImageButton Grid.Row="1" Grid.Column="0" Source="buttonmarkerset.png" Style="{StaticResource MyImageButton}" Padding="5"/>
               <Label Grid.Row="1" Grid.Column="1" Style="{StaticResource MyInfo}" Text="Marker setzen"/>

               <ImageButton Grid.Row="2" Grid.Column="0" Source="buttontrackdraw.png" Style="{StaticResource MyImageButton}" Padding="5"/>
               <Label Grid.Row="2" Grid.Column="1" Style="{StaticResource MyInfo}" Text="Track zeichnen"/>

               <ImageButton Grid.Row="3" Grid.Column="0" Source="buttontrackpointremove.png" Style="{StaticResource MyImageButton}" Padding="5"/>
               <Label Grid.Row="3" Grid.Column="1" Style="{StaticResource MyInfo}" Text="Trackpunkte löschen"/>

               <ImageButton Grid.Row="4" Grid.Column="0" Source="buttontracksplit.png" Style="{StaticResource MyImageButton}" Padding="5"/>
               <Label Grid.Row="4" Grid.Column="1" Style="{StaticResource MyInfo}" Text="Track auftrennen"/>

               <ImageButton Grid.Row="5" Grid.Column="0" Source="buttontrackconcat.png" Style="{StaticResource MyImageButton}" Padding="5"/>
               <Label Grid.Row="5" Grid.Column="1" Style="{StaticResource MyInfo}" Text="2 Tracks verbinden"/>
            </Grid>

            <BoxView Style="{StaticResource HLine}"/>
            <Label Style="{StaticResource MySection}" Text="Funktionen im Bearbeitungsmodus"/>

            <Grid ColumnDefinitions="auto,auto" RowDefinitions="Auto,Auto,Auto,Auto">
               <ImageButton Grid.Row="0" Grid.Column="0" Source="target.png" Style="{StaticResource MyImageButton2}" Padding="5"/>
               <Label Grid.Row="0" Grid.Column="1" Style="{StaticResource MyInfo}" Text="analog 'Tip' in die Kartenmitte"/>

               <ImageButton Grid.Row="1" Grid.Column="0" Source="minus.png" Style="{StaticResource MyImageButton2}" Padding="5"/>
               <Label Grid.Row="1" Grid.Column="1" Style="{StaticResource MyInfo}" Text="letzten Trackpunkt löschen"/>

               <ImageButton Grid.Row="2" Grid.Column="0" Source="ok.png" Style="{StaticResource MyImageButton2}" Padding="5"/>
               <Label Grid.Row="2" Grid.Column="1" Style="{StaticResource MyInfo}" Text="Bearbeitung abschließen"/>

               <ImageButton Grid.Row="3" Grid.Column="0" Source="cancel.png" Style="{StaticResource MyImageButton2}" Padding="5"/>
               <Label Grid.Row="3" Grid.Column="1" Style="{StaticResource MyInfo}" Text="Bearbeitung abbrechen"/>
            </Grid>

            <BoxView Style="{StaticResource HLine}"/>
            <Label Style="{StaticResource MySection}" Text="Fingertip in die Karte"/>

            <Grid ColumnDefinitions="auto,40*,60*" RowDefinitions="Auto,Auto,Auto,Auto">
               <ImageButton Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Source="buttontap1pressed.png" Style="{StaticResource MyImageButton}" Padding="3,0,0,0"/>
               <Label Grid.Row="0" Grid.Column="1" Style="{StaticResource MyAction}" Text="auf Marker, Track"/>
               <Label Grid.Row="0" Grid.Column="2" Style="{StaticResource MyInfo}" Text="Info für diesen Marker oder Track"/>
               <Label Grid.Row="1" Grid.Column="1" Style="{StaticResource MyAction}" Text="im Editiermodus in die Karte"/>
               <Label Grid.Row="1" Grid.Column="2" Style="{StaticResource MyInfo}" Text="Bearbeitung von Marker oder Track"/>

               <ImageButton Grid.Row="2" Grid.Column="0" Source="buttontap2pressed.png" Style="{StaticResource MyImageButton}" Padding="3,0,0,0"/>
               <Label Grid.Row="2" Grid.Column="1" Style="{StaticResource MyAction}" Text="in die Karte"/>
               <Label Grid.Row="2" Grid.Column="2" Style="{StaticResource MyInfo}" Text="Info für diese Koordinaten (Garmin oder OSM)"/>

               <ImageButton Grid.Row="3" Grid.Column="0" Source="buttontap3pressed.png" Style="{StaticResource MyImageButton}" Padding="3,0,0,0"/>
               <Label Grid.Row="3" Grid.Column="1" Style="{StaticResource MyAction}" Text="auf Marker, Track (nur im Editiermodus!)"/>
               <Label Grid.Row="3" Grid.Column="2" Style="{StaticResource MyInfo}" Text="diesen Marker oder Track (nach Rückfrage) löschen"/>
            </Grid>

            <HorizontalStackLayout HorizontalOptions="Center" Padding="0,20,0,0">
               <Label Style="{StaticResource MySection}" VerticalOptions="Center" Text="im Bearbeitungsmodus für Marker:"/>
               <ImageButton Source="buttonmarkersetpressed.png" Style="{StaticResource MyImageButton}" Padding="0,5,0,0"/>
            </HorizontalStackLayout>

            <Grid ColumnDefinitions="40*,60*" RowDefinitions="Auto,Auto,Auto,Auto">

               <Label Grid.Row="0" Style="{StaticResource MyAction}" Text="Tip auf Marker:"/>
               <Label Grid.Row="0" Style="{StaticResource MyInfo}" Text="Start des Verschiebens (nach Rückfrage) für diesen Marker"/>
               <Label Grid.Row="1" Style="{StaticResource MyAction}" Text="Tip in die Karte:"/>
               <Label Grid.Row="1" Style="{StaticResource MyInfo}" Text="wenn kein Marker ausgewählt ist, (nach Rückfrage) neuen Marker setzen, sonst Zielposition für Verschiebung"/>

            </Grid>

            <HorizontalStackLayout HorizontalOptions="Center" Padding="0,20,0,0">
               <Label Style="{StaticResource MySection}" VerticalOptions="Center" Text="Zeichnenmodus für Tracks:"/>
               <ImageButton Source="buttontrackdrawpressed.png" Style="{StaticResource MyImageButton}" Padding="0,5,0,0"/>
            </HorizontalStackLayout>

            <Grid ColumnDefinitions="40*,60*" RowDefinitions="Auto,Auto,Auto">
               <Label Grid.Row="0" Style="{StaticResource MyAction}" Text="Tip auf Marker, Track oder in die Karte"/>
               <Label Grid.Row="0" Style="{StaticResource MyInfo}" Text="Start eines neuen Tracks oder Anfügen eines Punktes an den aktuellen Track"/>
            </Grid>

            <HorizontalStackLayout HorizontalOptions="Center" Padding="0,20,0,0">
               <Label Style="{StaticResource MySection}" VerticalOptions="Center" Text="Trennmodus für Tracks:"/>
               <ImageButton Source="buttontracksplitpressed.png" Style="{StaticResource MyImageButton}" Padding="0,5,0,0"/>
            </HorizontalStackLayout>

            <Grid ColumnDefinitions="40*,60*" RowDefinitions="Auto,Auto">
               <Label Grid.Row="0" Style="{StaticResource MyAction}" Text="Tip auf Track"/>
               <Label Grid.Row="0" Style="{StaticResource MyInfo}" Text="falls noch kein Track zum Trennen ausgewählt ist, wird dieser Track gewählt"/>
            </Grid>

            <HorizontalStackLayout HorizontalOptions="Center" Padding="0,20,0,0">
               <Label Style="{StaticResource MySection}" VerticalOptions="Center" Text="Anhängenmodus für Tracks:"/>
               <ImageButton Source="buttontrackconcatpressed.png" Style="{StaticResource MyImageButton}" Padding="0,5,0,0"/>
            </HorizontalStackLayout>

            <Grid ColumnDefinitions="40*,60*" RowDefinitions="Auto,Auto">
               <Label Grid.Row="0" Style="{StaticResource MyAction}" Text="Tip auf Track"/>
               <Label Grid.Row="0" Style="{StaticResource MyInfo}" Text="falls noch kein Track zum Anhängen ausgewählt ist, wird dieser Track als 1. Track gewählt, sonst als 2. Track"/>
            </Grid>

         </VerticalStackLayout>
      </ScrollView>
   </ContentPage.Content>
</ContentPage>