<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrackEddi.ConfigEdit.EditGroupnamePage"
             Title="Kartengruppenname"
             x:Name="mypage"
             BackgroundColor="DarkGray">
    <ContentPage.Content>
        <VerticalStackLayout>
            <Entry x:Name="entryGroupname"
                   HorizontalOptions="Fill"
                   FontSize="Medium"
                   TextColor="Black"
                   Margin="10"
                   TextChanged="entryGroupname_TextChanged"/>

            <Button x:Name="btnSave"
                    Text="Name speichern"
                    Style="{StaticResource MyStdButton}"
                    IsEnabled="False"
                    Clicked="btnSave_Clicked"/>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>